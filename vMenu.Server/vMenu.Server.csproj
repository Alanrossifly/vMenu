<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <OutputType>Library</OutputType>
    <AssemblyName>vMenu.Server.net</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <OutputPath>..\Build\Server\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="CitizenFX.Core">
      <HintPath>..\CitizenFX.Natives\Server\CitizenFX.Core.dll</HintPath>
    </Reference>
    <Reference Include="CitizenFX.Server">
      <HintPath>..\CitizenFX.Natives\Server\CitizenFX.Server.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\vMenu.Shared\vMenu.Shared.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Functions\" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="ResourceFiles\fxmanifest.lua">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <Content Include="ResourceFiles\stream\vmenu_textures.ytd">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="System.Data.DataSetExtensions" Version="4.5.0" />
  </ItemGroup>
  <PropertyGroup>
    <PostBuildEvent>xcopy /E /Y "$(SolutionDir)Build\Server\net452\" "$(SolutionDir)Build\[Resource]\vMenu"
xcopy /E /Y "$(SolutionDir)Build\[Resource]\vMenu\ResourceFiles\" "$(SolutionDir)Build\[Resource]\vMenu"
del "$(SolutionDir)Build\[Resource]\vMenu\CitizenFX.*.*"
RD /S /Q "$(SolutionDir)Build\[Resource]\vMenu\ResourceFiles\"</PostBuildEvent>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
  </PropertyGroup>
</Project>